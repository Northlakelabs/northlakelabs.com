---
import Layout from '../../components/layout/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Button from '../../components/ui/Button.astro';
import MultiSensorFusionDemo from '../../components/interactive/MultiSensorFusionDemo/MultiSensorFusionDemo.tsx';
---

<Layout title="bioMX-ai Demo - Northlake Labs" description="Live multi-sensor fusion demo with real constrained gait research data.">
  <Header />
  
  <main class="relative z-10">
    <!-- Hero -->
    <section class="py-16">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <div class="inline-flex items-center gap-2 bg-burnt-sienna/10 border border-burnt-sienna/20 rounded-full px-4 py-1.5 mb-6">
          <div class="w-2 h-2 bg-burnt-sienna rounded-full animate-pulse"></div>
          <span class="text-xs text-burnt-sienna font-medium uppercase tracking-wider">Live Demo</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="bg-gradient-to-r from-burnt-sienna via-royal-purple to-indigo bg-clip-text text-transparent">
            bioMX-ai: Multi-Sensor Fusion
          </span>
        </h1>
        <p class="text-lg text-gray-300 mb-4 max-w-2xl mx-auto leading-relaxed">
          Real research data from a constrained gait study (left leg locked in extension). 
          Watch how traditional detection methods struggle — and where AI-powered fusion shines.
        </p>
      </div>
    </section>

    <!-- Live Demo -->
    <section class="py-8">
      <div class="max-w-6xl mx-auto px-6">
        <MultiSensorFusionDemo client:only="react" trialId="T5" />
        
        <!-- Dataset info -->
        <div class="mt-10 grid md:grid-cols-2 gap-6">
          <div class="bg-white/[0.03] p-6 rounded-2xl border border-white/[0.06]">
            <h3 class="text-lg font-semibold mb-3 text-burnt-sienna">Dataset</h3>
            <ul class="text-gray-300 space-y-2 text-sm">
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Trial:</strong> T5 (Subject 1, Session 2)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Constraint:</strong> Left leg locked in extension</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Duration:</strong> 20-second analysis window</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Sensors:</strong> Force plates (1000Hz), EMG (2000Hz), Kinematics (100Hz)</span>
              </li>
            </ul>
          </div>
          
          <div class="bg-white/[0.03] p-6 rounded-2xl border border-white/[0.06]">
            <h3 class="text-lg font-semibold mb-3 text-burnt-sienna">Why This Matters</h3>
            <ul class="text-gray-300 space-y-2 text-sm">
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Force Asymmetry:</strong> Significant left-right differences from constraint</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Traditional Limits:</strong> Threshold-based methods break down</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>AI Advantage:</strong> Pattern recognition adapts to pathological gait</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span><strong>Real Impact:</strong> Better detection → better clinical decisions</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Technical details -->
    <section class="py-16">
      <div class="max-w-5xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white/[0.03] p-6 rounded-2xl border border-white/[0.06]">
            <h3 class="text-lg font-semibold mb-3 text-burnt-sienna">Data Pipeline</h3>
            <ul class="text-gray-300 space-y-2 text-sm">
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>Multi-rate sensor synchronization (1000Hz master)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>Real-time Chart.js visualization (60fps)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>Interactive threshold controls with live updates</span>
              </li>
            </ul>
          </div>
          
          <div class="bg-white/[0.03] p-6 rounded-2xl border border-white/[0.06]">
            <h3 class="text-lg font-semibold mb-3 text-burnt-sienna">Algorithm Stack</h3>
            <ul class="text-gray-300 space-y-2 text-sm">
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>Traditional: Force plate threshold detection</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>Basic Fusion: EMG + Force rule-based combination</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-royal-purple mt-1">▸</span>
                <span>AI Fusion: Multi-modal pattern recognition</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-12">
      <div class="max-w-2xl mx-auto px-6 text-center">
        <p class="text-gray-400 mb-6">Want to see bioMX-ai applied to your data?</p>
        <Button href="/contact/" variant="primary" size="lg">Let's Talk</Button>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
